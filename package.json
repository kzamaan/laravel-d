{
    "name": "laravel-app",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/messaging",
        "packages/permission"
    ],
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "queue": "php artisan queue:work",
        "schedule": "php artisan schedule:work",
        "reverb": "php artisan reverb:start --host=\"0.0.0.0\" --port=8081 --hostname=\"localhost\"",
        "pulse": "php artisan pulse:check",
        "app:start": "concurrently \"npm run queue\" \"npm run schedule\" \"npm run reverb\" \"npm run pulse\"",
        "messaging:watch": "npm run watch --workspace messaging",
        "permission:watch": "npm run watch --workspace permission"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@tiptap/core": "^2.4.0",
        "@tiptap/pm": "^2.4.0",
        "@tiptap/starter-kit": "^2.4.0",
        "autoprefixer": "^10.4.2",
        "axios": "^1.6.4",
        "concurrently": "^8.2.2",
        "laravel-echo": "^1.16.1",
        "laravel-vite-plugin": "^1.0",
        "postcss": "^8.4.31",
        "pusher-js": "^8.4.0-rc2",
        "tailwindcss": "^3.1.0",
        "toastify-js": "^1.12.0",
        "vite": "^5.0"
    }
}
